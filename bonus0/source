#include <stdio.h>
#include <unistd.h>

void p(char *str1, char *str2)
{
    char *nl_ptr;
    char buf[4104];

    puts(str2);
    read(0, buf, 4096);
    nl_ptr = strchr(buf, '\n');
    *nl_ptr = '\0';
    strncpy(str1, buf, 20);
}

void pp(char *str1)
{
    char current;
    unsigned int count;
    char *pos;
    byte zero;
    char buf1[20];
    char buf2[20];

    zero = 0;
    p(buf1, " - ");
    p(buf2, " - ");
    strcpy(str1, buf1);

    // this section equivalent to:
    // str1[strlen(str1)] = ' ';
    count = 0xffffffff;
    pos = str1;
    do {
        if (count == 0) break;
        count = count - 1;
        current = *pos;
        pos = pos + (zero * -2) + 1;
    } while (current != '\0');
    *(char *)(str1 + (~count - 1)) = ' ';
    // end section

    strcat(str1, buf2);
}

int main(void)
{
  char buf[54];
  
  pp(buf);
  puts(buf);
  return 0;
}
